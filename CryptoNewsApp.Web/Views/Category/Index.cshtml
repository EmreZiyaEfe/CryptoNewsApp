@model IEnumerable<CryptoNewsApp.Core.Entities.Category>

@{
    ViewData["Title"] = "Category List";
}

<h2>Kategori Listesi</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Kategori Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

