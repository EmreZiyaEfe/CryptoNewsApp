@model List<CryptoNewsApp.Application.Dtos.NewsDto>

@{
    ViewData["Title"] = "Home Page";
}



    <!-- Main Content -->
    <main class="container py-4">
        <div class="row">
            <!-- Main Content Area -->
            <div class="col-lg-8">
                <section class="mb-4">
                    <h2 class="h3 mb-4">Latest News</h2>
                    <div class="row g-4">
                        <!-- News Card 1 -->
                       @foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <article class="card h-100">
                                <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="@item.Title">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-primary">@item.Category</span>
                                        <small class="text-muted">@item.PublishDate?.ToString("g")</small>
                                    </div>
                                    <h3 class="h5 card-title">@item.Title</h3>
                                    <p class="card-text">@(!string.IsNullOrEmpty(item.Description) && item.Description.Length > 200 ? item.Description.Substring(0, 200) + "..." : item.Description)</p>
                                    <a href="@item.Url" class="btn btn-link p-0" target="_blank">Read more →</a>
                                </div>
                            </article>
                        </div>
                    }
                    </div>
                </section>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Popular Coins Section -->
                <section class="card mb-4">
                    <div class="card-header bg-light">
                        <h3 class="h5 mb-0">Popular Coins</h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="https://via.placeholder.com/24" alt="Bitcoin" class="me-2">
                                    Bitcoin (BTC)
                                </div>
                                <span class="text-success">$50,123.45</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="https://via.placeholder.com/24" alt="Ethereum" class="me-2">
                                    Ethereum (ETH)
                                </div>
                                <span class="text-success">$3,456.78</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="https://via.placeholder.com/24" alt="Solana" class="me-2">
                                    Solana (SOL)
                                </div>
                                <span class="text-danger">$123.45</span>
                            </li>
                        </ul>
                    </div>
                </section>

                <!-- Newsletter Section -->
                <section class="card">
                    <div class="card-body">
                        <h3 class="h5 mb-3">Stay Updated</h3>
                        <p class="small text-muted mb-3">Get the latest crypto news delivered to your inbox.</p>
                        <form>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Enter your email">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </main>


