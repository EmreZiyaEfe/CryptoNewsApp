@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}    

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Analytics</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Print</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <i class="fas fa-calendar"></i>
                This week
            </button>
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Views</h6>
                            <h2 class="mt-2 mb-0">89,012</h2>
                        </div>
                        <i class="fas fa-eye fa-2x opacity-50"></i>
                    </div>
                    <p class="card-text mt-3 mb-0">
                        <i class="fas fa-arrow-up"></i> 15% increase
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Active Users</h6>
                            <h2 class="mt-2 mb-0">5,678</h2>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                    <p class="card-text mt-3 mb-0">
                        <i class="fas fa-arrow-up"></i> 8% increase
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Comments</h6>
                            <h2 class="mt-2 mb-0">1,234</h2>
                        </div>
                        <i class="fas fa-comments fa-2x opacity-50"></i>
                    </div>
                    <p class="card-text mt-3 mb-0">
                        <i class="fas fa-arrow-up"></i> 12% increase
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Avg. Time</h6>
                            <h2 class="mt-2 mb-0">4m 32s</h2>
                        </div>
                        <i class="fas fa-clock fa-2x opacity-50"></i>
                    </div>
                    <p class="card-text mt-3 mb-0">
                        <i class="fas fa-arrow-up"></i> 5% increase
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <!-- Page Views Chart -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Page Views</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="pageViewsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Traffic Sources -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Traffic Sources</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="trafficSourcesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Popular Articles -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Popular Articles</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Article</th>
                                    <th>Views</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Bitcoin Surges Past $50,000</td>
                                    <td>12,345</td>
                                    <td>234</td>
                                </tr>
                                <tr>
                                    <td>Ethereum 2.0 Upgrade Details</td>
                                    <td>10,234</td>
                                    <td>189</td>
                                </tr>
                                <tr>
                                    <td>New DeFi Protocol Launch</td>
                                    <td>8,765</td>
                                    <td>156</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Demographics -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">User Demographics</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="userDemographicsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    // Page Views Chart
    const pageViewsCtx = document.getElementById('pageViewsChart').getContext('2d');
    new Chart(pageViewsCtx, {
        type: 'line',
        data: {
            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
            datasets: [{
                label: 'Page Views',
                data: [12000, 19000, 15000, 25000, 22000, 30000, 28000],
                borderColor: '#3498db',
                tension: 0.4,
                fill: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // Traffic Sources Chart
    const trafficSourcesCtx = document.getElementById('trafficSourcesChart').getContext('2d');
    new Chart(trafficSourcesCtx, {
        type: 'doughnut',
        data: {
            labels: ['Direct', 'Search', 'Social', 'Referral'],
            datasets: [{
                data: [40, 30, 20, 10],
                backgroundColor: ['#3498db', '#2ecc71', '#e74c3c', '#f1c40f']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // User Demographics Chart
    const userDemographicsCtx = document.getElementById('userDemographicsChart').getContext('2d');
    new Chart(userDemographicsCtx, {
        type: 'bar',
        data: {
            labels: ['18-24', '25-34', '35-44', '45-54', '55+'],
            datasets: [{
                label: 'Users',
                data: [30, 45, 15, 7, 3],
                backgroundColor: '#3498db'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>