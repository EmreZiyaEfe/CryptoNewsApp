<!-- Main Content -->

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <i class="fas fa-calendar"></i>
            This week
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Total News</h6>
                        <h2 class="mt-2 mb-0">1,234</h2>
                    </div>
                    <i class="fas fa-newspaper fa-2x opacity-50"></i>
                </div>
                <p class="card-text mt-3 mb-0">
                    <i class="fas fa-arrow-up"></i> 12% increase
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Active Users</h6>
                        <h2 class="mt-2 mb-0">5,678</h2>
                    </div>
                    <i class="fas fa-users fa-2x opacity-50"></i>
                </div>
                <p class="card-text mt-3 mb-0">
                    <i class="fas fa-arrow-up"></i> 8% increase
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Categories</h6>
                        <h2 class="mt-2 mb-0">24</h2>
                    </div>
                    <i class="fas fa-folder fa-2x opacity-50"></i>
                </div>
                <p class="card-text mt-3 mb-0">
                    <i class="fas fa-arrow-up"></i> 2 new categories
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Page Views</h6>
                        <h2 class="mt-2 mb-0">89,012</h2>
                    </div>
                    <i class="fas fa-eye fa-2x opacity-50"></i>
                </div>
                <p class="card-text mt-3 mb-0">
                    <i class="fas fa-arrow-up"></i> 15% increase
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent News Articles</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Bitcoin Surges Past $50,000</td>
                                <td>Bitcoin</td>
                                <td>John Doe</td>
                                <td>2024-03-15</td>
                                <td><span class="badge bg-success">Published</span></td>
                            </tr>
                            <tr>
                                <td>Ethereum 2.0 Upgrade Details</td>
                                <td>Ethereum</td>
                                <td>Jane Smith</td>
                                <td>2024-03-14</td>
                                <td><span class="badge bg-success">Published</span></td>
                            </tr>
                            <tr>
                                <td>New DeFi Protocol Launch</td>
                                <td>DeFi</td>
                                <td>Mike Johnson</td>
                                <td>2024-03-13</td>
                                <td><span class="badge bg-warning">Draft</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Admin/News/Index/" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Article
                    </a>
                    <a href="/Admin/Categories/Index/" class="btn btn-outline-primary">
                        <i class="fas fa-folder-plus me-2"></i>Add New Category
                    </a>
                    <a href="/Admin/UsersManagement/Index/" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2"></i>Add New User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
